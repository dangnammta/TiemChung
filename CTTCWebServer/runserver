#!/bin/sh
#
# Startup script for Main

export wd=.
export INCLUDE=$wd/cmd/service.in.sh
export JMXHOST=localhost
export JMXPORT=29999
export APPENV=production
export XMS=1024M
pid_file=$wd/tmp/service.pid
log_file=$wd/tmp/service.log

case "$1" in
    start)
        # Main startup
        echo -n "Starting Crawler web service: "

        $wd/cmd/service -p $pid_file > $log_file 2>&1
        echo "OK"
        ;;
    stop)
        # Main shutdown
        echo -n "Shutting down Crawler web service: "
        kill `cat $pid_file`
        echo "OK"
        ;;
    reload|restart)
        $0 stop
        $0 start
        ;;
    status)
        ;;
    *)
        echo "Usage: `basename $0` start|stop|restart|reload"
        exit 1
esac

exit 0

# vi:ai sw=4 ts=4 tw=0 et

